.nav {
    display: flex;
    align-items: center;
    
    @include tablets {
        display: none;
    }

    &__list{
        display: flex;
    }

    &__link:hover {
        color: $purple;
    }
    &__item {
        margin-right: 56px;
        font-size: 18px;
        &:last-child {
            margin-right: 0;
        }

        @media screen and (max-width: 920px) {
            margin-right: 30px;
          }
    }
}